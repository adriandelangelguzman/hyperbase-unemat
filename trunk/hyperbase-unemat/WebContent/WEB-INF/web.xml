<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>hyperbase</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>logic</servlet-name>
    <servlet-class>br.colider.unemat.servlets.controller.ControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logic</servlet-name>
    <url-pattern>/hyperbase</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cadmonografia</servlet-name>
    <servlet-class>br.colider.unemat.servlets.CadastraMonografia</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cadmonografia</servlet-name>
    <url-pattern>/cad-monografia</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cadprojeto</servlet-name>
    <servlet-class>br.colider.unemat.servlets.CadastraProjeto</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cadprojeto</servlet-name>
    <url-pattern>/cad-projeto</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error/error-page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error/error-404.jsp</location>
  </error-page>
  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>br.colider.unemat.servlets.filter.SessionFilter</filter-class>
    <init-param>
      <param-name>avoid-urls</param-name>
      <param-value>index.jsp,consulta.jsp,cad-projeto.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>FileUpload</display-name>
    <servlet-name>FileUpload</servlet-name>
    <servlet-class>br.colider.unemat.servlets.controller.FileUpload</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUpload</servlet-name>
    <url-pattern>/FileUpload</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CadastraProjeto</display-name>
    <servlet-name>CadastraProjeto</servlet-name>
    <servlet-class>br.colider.unemat.servlets.CadastraProjeto</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastraProjeto</servlet-name>
    <url-pattern>/CadastraProjeto</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>BuscaAluno</display-name>
    <servlet-name>BuscaAluno</servlet-name>
    <servlet-class>br.colider.unemat.servlets.BuscaAluno</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>BuscaAluno</servlet-name>
    <url-pattern>/BuscaAluno</url-pattern>
  </servlet-mapping>
</web-app>